{
    
    "express": {
        "view cache": false,
        "view engine": "jade",
        "views": "path:./public/templates"
    },

    "view engines": {
        "jade": {
            "module": "consolidate",
            "settings": {
                "helpers": null,
                "stream": false
            }
        }
    },

    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {   
                        "css": {
                            "module": "kraken-devtools/plugins/sass",
                            "files": "/css/**/*.css"
                        },
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
